{% extends "_base.twig" %}

{% set pageTitle = 'Statistics' %}
{% set tab = "stats" %}

{% block main %}
    <main role="main" class="container-fluid">
        <div class="content-page">

            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Server Browser</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Stats</li>
                </ol>
            </nav>

            <div class="stats-page">

                <h1>Statistics</h1>
                <p class="lead">Just for fun!</p>
                <hr />

                <div class="metrics">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card" title="Tally of unique player hosts we've seen, since the mod launched.">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-muted">
                                        <i class="mdi mdi-account-star"></i>
                                        Unique hosts seen, all-time
                                    </h6>
                                    <span class="stat-value">{{ stats.uniqueHostCount }}</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card" title="Tally of unique levels we've seen in lobbies, since the mod launched.">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-muted">
                                        <i class="mdi mdi-music"></i>
                                        Unique levels seen, all-time
                                    </h6>
                                    <span class="stat-value">{{ stats.uniqueLevelCount }}</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card" title="">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-muted">
                                        <i class="mdi mdi-play"></i>
                                        Total games played, since 2021-01-15
                                    </h6>
                                    <span class="stat-value">{{ stats.totalPlayStat }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <hr />

                <section>
                    <h4>Top 10 custom levels</h4>
                    <p class="lite">Since 2021-01-15</p>
                    {% include "tables/top_levels_table.twig" with {levels: stats.topLevelsCustom} %}
                </section>

                <hr />

                <section>
                    <h4>Top 10 official levels</h4>
                    <p class="lite">Since 2021-01-15</p>
                    {% include "tables/top_levels_table.twig" with {levels: stats.topLevelsOfficial} %}
                </section>

            </div>

        </div>
    </main>
{% endblock %}