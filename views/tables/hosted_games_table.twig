<table class="table table-bordered table-striped">
    <thead class="thead-dark">
    <tr>
        <th></th>
        <th width="5">Code</th>
        <th>Name</th>
        <th>Level</th>
        <th>Difficulty</th>
        <th>Players</th>
        <th>Game</th>
        <th>Modded</th>
        <th>Master Server</th>
    </tr>
    </thead>
    <tbody>
    {% for game in games %}
        <tr>
            <td class="cover-art-cell">
                {% if game.coverUrl %}
                    <img src="{{ game.coverUrl }}" alt="{{ game.describeSong() }}" height="25" class="cover-art"/>
                {% else %}
                    {% if game.levelId %}
                        <span class="huh">
                            <i class="mdi mdi-music"></i>
                        </span>
                    {% else %}
                        <span class="huh">
                            <i class="mdi mdi-new-box"></i>
                        </span>
                    {% endif %}
                {% endif %}
            </td>
            <td class="align-middle">
                {% if game.getIsQuickplay() %}
                    {% include "bits/quickplay_icon.twig" %}
                {% else %}
                    <code><strong>{{ game.serverCode }}</strong></code>
                {% endif %}
            </td>
            <td class="align-middle">
                <a href="{{ game.getWebDetailUrl() }}" title="View game details" target="_self">
                    <strong>{{ game.gameName }}</strong>
                </a>
            </td>
            <td class="align-middle">
                {% if not game.getIsPlayingLevel() %}
                    <i class="mdi mdi-account-group-outline"></i> In lobby
                {% else %}
                    {% if game.levelName %}
                        {{ game.levelName }}
                    {% else %}
                        {{ game.describeSong() }}
                    {% endif %}
                {% endif %}
            </td>
            <td class="align-middle">
                {% if game.difficulty is not null %}
                    <span class="difficulty-txt -d{{ game.difficulty }}">{{ game.describeDifficulty() }}</span>
                {% else %}
                    <span class="difficulty-txt -unknown">New game</span>
                {% endif %}
            </td>
            <td class="align-middle">{{ game.playerCount }}/{{ game.playerLimit }}</td>
            <td class="align-middle">{{ game.gameVersion ? ('v' ~ game.gameVersion) : '?' }}</td>
            <td class="align-middle">
                {% if game.isModded %}
                    {% if game.mpCoreVersion %}
                        <span class="mp-core-version">
                            Core v{{ game.mpCoreVersion }}
                        </span>
                    {% elseif game.mpExVersion %}
                        <span class="mp-ex-version">
                            Extensions v{{ game.mpExVersion }}
                        </span>
                    {% else %}
                        Modded
                    {% endif %}
                {% else %}
                    <span class="vanilla-version">Vanilla</span>
                {% endif %}
            </td>
            <td class="align-middle">
                {% if game.getIsGameLiftServer() %}
                    <i class="mdi mdi-aws"></i>
                    <span>GameLift {{ game.tryGetGameLiftRegion() }}</span>
                {% elseif game.getIsOfficial() and (game.platform == "steam" or game.platform == "oculus") %}
                    {% if game.platform == "steam" %}
                        <i class="mdi mdi-steam"></i> Steam
                    {% elseif game.platform == "oculus" %}
                        {% include "oculus_icon.twig"%} Oculus
                    {% endif %}
                {% elseif game.getUsesBeatTogetherMaster() %}
                    <i class="mdi mdi-handshake"></i> BeatTogether
                {% else %}
                    <i class="mdi mdi-connection"></i> {{ game.describeMasterServer() }}
                {% endif %}
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="100" class="no-results-cell">
                <i class="mdi mdi-emoticon-sad-outline"></i>
                <span>No active games right now</span>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>